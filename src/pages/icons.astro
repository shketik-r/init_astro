---
import Layout from "src/layouts/Layout.astro";
import icons from "src/icons.json";
import Footer from "@components/Footer/Footer.astro";
import Header from "@components/Header/Header.astro";
import "../assets/styles/blog2.scss"
---

<Layout title="all icons">


    <Header />

    <main class="page">

     <div class="icons-all container">
          <h2>Иконки</h2>
          <div class="icons-grid">
            {
              icons.map((icon) => {
                return (
                  <div class="icons-item">
                    <div class="icons-item-name">{icon}</div>
                    <svg>
                      <use href=`#${icon}` />
                    </svg>
                  </div>
                );
              })
            }
          </div>
      </div>

    </main>

    <Footer />

<script src="../assets/scripts/main.js"></script>


<style is:inline>

.icons-all{
    padding-top: 200px;
    padding-bottom: 200px;
}

.icons-all h2{
    margin-bottom: 40px;
}
.icons-grid{
    display: flex;
    gap: 20px;
  }

  .icons-item{
   
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 6px;
    padding: 10px;
    border: 1px solid #555555a1;
    border-radius: 5px;
  }

  .icons-item svg{
    stroke: #000;
    fill: #000;
     width: 40px;
    height: 40px;
  }
</style>


</Layout>




